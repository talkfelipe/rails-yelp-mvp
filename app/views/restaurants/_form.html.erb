<div class="container">
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :category, collection: Restaurant::CATEGORIES, include_blank: false %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.submit 'Add to the list', class: 'btn btn-primary' %>
  <% end %>
</div>
