<div class="container">
  <div class="border d-flex p-3">
    <%= link_to restaurants_path do %>
      <i class="fa-solid fa-house"></i>
    <% end  %>
  </div>
  <h1>New review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
</div>
