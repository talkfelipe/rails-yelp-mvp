<div class="container text-center">
  <div class="border d-flex p-3 rounded">
    <%= link_to restaurants_path do %>
      <i class="fa-solid fa-house m-3"></i>
    <% end  %>
    <%= link_to "Write a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
  </div>
  <div class="card mb-3 shadow">
    <div class="card-body">
      <div class="card-product-infos">
        <h2><%= @restaurant.name %></h2>
        <p>Category: <%= @restaurant.category %></p>
        <p>Address: <%= @restaurant.address %></p>
        <p>Address: <%= @restaurant.phone_number %></p>
      </div>
    </div>
  </div>
</div>
<% @restaurant.reviews.each do |review| %>
  <div class="container border p-3 shadow rounded">
    <p><%= review.content %></p>
    <p><%= review.rating %></p>
  </div>
<% end %>
